<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean
        class="org.springframework.jdbc.datasource.DriverManagerDataSource"
        id="dataSource" name="dataSource" primary="true">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        <property name="url" value="jdbc:sqlserver://170.142.67.98:1433;DatabaseName=DW_ODS_CaseConnect;"/>
        <property name="username" value="CASEConnectUSer"/>
        <property name="password" value="CASE39Connect"/>
    </bean>
    <bean
        class="org.springframework.boot.web.servlet.ServletRegistrationBean" id="servlet">
        <property name="name" value="CamelServlet"/>
        <property name="servlet" ref="camelServlet"/>
        <property name="urlMappings" value="/claims/*"/>
    </bean>
    <bean
        class="org.apache.camel.component.servlet.CamelHttpTransportServlet" id="camelServlet"/>
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <restConfiguration apiContextPath="api-docs" bindingMode="json"
            component="servlet" contextPath="/claimlab">
            <apiProperty key="cors" value="true"/>
            <apiProperty key="api.title" value="Claim Info API Lab"/>
            <apiProperty key="api.version" value="1.0.0"/>
        </restConfiguration>
        <rest id="rest-claim" path="/claim">
            <get id="getClaim" uri="all">
                <description>Get claim details</description>
                <to uri="direct:getClaims"/>
            </get>
        </rest>
        <route id="getClaims">
            <from id="direct1" uri="direct:getClaims"/>
            <to id="_to1" uri="sql:SELECT TOP 1  NBR_SSN_LAST4_KY,NBR_CASE_KY, CDE_CATEGORY_KY FROM DW_ODS_CaseConnect.dbo.GSW1CASE   ORDER BY NAM_LAST_KY?dataSource=#dataSource&amp;outputClass=org.mycompany.Claim"/>
            <log id="_log1" message="${body}"/>
        </route>
        <route id="sqlcall">
            <from id="_to2" uri="timer:timerName?repeatCount=1"/>
            <to id="sql" uri="sql:SELECT TOP 1  NBR_SSN_LAST4_KY,NBR_CASE_KY, CDE_CATEGORY_KY FROM DW_ODS_CaseConnect.dbo.GSW1CASE   ORDER BY NAM_LAST_KY?dataSource=#dataSource&amp;outputClass=org.mycompany.Claim"/>
            <log id="_sql_log1" message="Log --->> ${body.case_key}, ${body.ssn_key}, ${body.category}"/>
        </route>
    </camelContext>
</beans>

